@page
@model LoginModel

@{
    ViewData["Title"] = "Ingresar";
}
@{
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<br>
<br>

<div class="container">
    <div class="row">
        <div class="col">
            <h1>@ViewData["Title"]</h1>
            <section>
                <form id="account" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Ingresar</button>
                    </div>
                    <div class="form-group">
                        @*<p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Olvidé mi contraseña</a>
                            </p>*@
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como usuario
                                nuevo</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col">
            <a asp-controller="Home" asp-action="Index" class="card-link"><img src="~/assets/logo.png" alt=""
                    width="400" height="430"></a>
        </div>
        <div class="col">
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
