@model KioskoFacturacion.Web.Models.Rubro

@{
    ViewData["Title"] = "Eliminar rubro";
}


<div class="container text-center">
    <h1>@ViewData["Title"]</h1>
</div>
<br>

<h3>¿Está seguro de eliminar el rubro?</h3>
<div>
    <hr />
    <dl class="row form-custom">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>
    <hr />
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-1" role="group" aria-label="First group">
            <form asp-action="Delete">
                <input type="hidden" asp-for="ID" />
                <button style="display:inline-block" type="submit" class="custom-btn custom-danger"
                    onclick="return confirm('¿Está seguro de eliminar el rubro? Ésta acción borrará también las marcas y productos asociados al rubro. Es una acción irreversible.')">Eliminar</button>
            </form>
        </div>
        <div class="btn-group" role="group" aria-label="Third group">
            <a href='javascript:history.go(-1)'>
                <button style="display:inline-block" class="custom-btn custom-warning">Atrás</button>
            </a>
        </div>
    </div>
</div>