<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kiosko</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
            <div class="container-fluid col-sm-12 col-sm-offset-0">
                <a class="navbar-brand txt-log" asp-area="" asp-controller="Home" asp-action="Index"
                    style="color: white;">
                    <img src="~/assets/logo_corto.png" alt="Menú inicio" width="30" height="26"
                        class="d-inline-block align-top">
                    Maxikiosco
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavLightDropdown" aria-controls="navbarNavLightDropdown"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavLightDropdown">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Facturacion" asp-action="Index">
                                <button type="button" class="btn btn-outline-light">Facturacion</button>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarLightDropdownMenuLink" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                <button type="button" class="btn btn-outline-light">Gestión</button>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light" aria-labelledby="navbarLightDropdownMenuLink">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Gestion">Menú
                                        de opciones</a></li>
                                <div class="dropdown-divider"></div>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Productos"
                                        asp-action="Index">Productos</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Marcas"
                                        asp-action="Index">Marcas</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Rubros"
                                        asp-action="Index">Rubros</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
        @*<p style="text-align:center; font-weight:bold; background-color:tomato">SITIO EN CONSTRUCCIÓN</p>*@
    </header>
    <div class="container">
        <hr>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Karim Emilio - <a asp-area="" asp-controller="Facturacion" asp-action="Contacto">Contacto</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
@section Scripts {
@RenderSection("Scripts", required: false)
}