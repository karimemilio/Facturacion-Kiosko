@model KioskoFacturacion.Web.Models.Producto

@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="container text-center">
    <h1>@ViewData["Title"]</h1>
</div>

<h3>¿Está seguro de eliminar el producto?</h3>
<div>
    <hr />
    <dl class="row form-custom">
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-1">
            @Html.DisplayNameFor(model => model.Marca)
        </dt>
        <dd class="col-sm-11">
            @Html.DisplayFor(model => model.Marca.Nombre)
        </dd>
    </dl>
    <hr />
    <form asp-action="Eliminar">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Eliminar" class="btn btn-danger-success" />
        <a asp-controller="Productos" asp-action="Index">
            <button type="button" class="btn btn-warning">Atrás</button>
        </a>
    </form>
</div>