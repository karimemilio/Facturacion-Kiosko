@model Producto

@{
    ViewData["Title"] = "Productos - Editar";
}

<h1>@ViewData["Title"]</h1>
<br>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Actualizar" method="post">
            <input type="hidden" asp-for="ID">
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Nombre">Nombre</label>
                    <input type="text" asp-for="Nombre">
                </div>
                <div class="form-group">
                    <label asp-for="Marca">Marca</label>
                    <select asp-for="Marca">
@*                        <option value="Activo">Activo</option>
                        <option value="Inactivo">Inactivo</option>*@
                    </select>
                </div>
            </div>
            <button type="submit" value="Guardar" class="btn btn-primary">Guardar</button>
        </form>
    </div>
</div>