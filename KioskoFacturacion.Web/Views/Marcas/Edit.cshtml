@model KioskoFacturacion.Web.Models.Marca

@{
    ViewData["Title"] = "Editar marca";
}

<h1>@ViewData["Title"]</h1>
<div>
    <hr />
    <form asp-action="Actualizar" method="post">
        <input type="hidden" asp-for="ID">
        <div class="form-group row">
            <div class="col-sm-1 col-form-label">
                @Html.DisplayNameFor(model => model.Nombre)
            </div>
            <div class="col-sm-6">
                <input type="text" asp-for="Nombre" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1 col-form-label">
                @Html.DisplayNameFor(model => model.Rubro)
            </div>
            <div class="col-sm-6">
                @Html.DropDownList("RubroID", ViewBag.RubrosList, "", new { @class = "form-control"})
                @Html.ValidationMessageFor(model => model.RubroID, "", new { @class = "text-danger"})
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-1 col-form-label">
                @Html.DisplayNameFor(model => model.Estado)
            </div>
            <div class="col-sm-6">
                <select asp-for="Estado" class="form-control">
                    <option value="Activo">Activo</option>
                    <option value="Inactivo">Inactivo</option>
                </select>
            </div>

        </div>
        <hr />
        <button type="submit" value="Guardar" class="btn btn-success">Guardar</button>
        <a asp-controller="Marcas" asp-action="Index">
            <button type="button" class="btn btn-warning">Atr√°s</button>
        </a>
    </form>
</div>